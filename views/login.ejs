<!DOCTYPE html>
<html lang="en">
<head>
	<title>Login : Dashboard</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	
	<link rel="icon" type="image/jpg" sizes="16x16" href="/images/BTA.jpg">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="/stylesheets/util.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
</head>
<body>
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<form class="login100-form validate-form" action="/login/Students" method="POST">

					<span class="login100-form-title p-b-34"> Students Login </span>
				
					<span><%#=error%></span>

					<div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Type user name">
						<input id="first-name" class="input100" type="text" name="email" placeholder="Email">
						<span class="focus-input100"></span>
					</div>
					<div class="wrap-input100 rs2-wrap-input100 validate-input m-b-20" data-validate="Type password">
						<input class="input100" type="password" name="password" placeholder="Password">
						<span class="focus-input100"></span>
					</div>

					<div class="w-full text-center p-t-27 p-b-239">
						<div class="container-login100-form-btn">
							<button class="login100-form-btn">Sign in</button>
						</div>

						<a href="/forgot" class="txt2 text-warning"> Forgot password? </a>
					</div>

					<%#
						<div class="d-none w-full text-center">
							<a href="#" class="txt3">
								Sign Up
							</a>
						</div>
					%>
				</form>

				<div class="login100-more" style="background-image: url('/img/africa.jpg');"></div>
			</div>
		</div>
	</div>

	<%#- include('../partials/dashboard-scripts') %>
	<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
	<script>
		if( "<%-loginError%>" ){
			swal({
				text: "<%=loginError%>",
			});
		}
		if( "<%-error%>" ){
			swal({
				text: "<%=error%>",
			});
		}
		if("<%-passwordError%>"){
			swal({
				text: "<%=passwordError%>",
			});
		}
	</script>

</body>
</html>

